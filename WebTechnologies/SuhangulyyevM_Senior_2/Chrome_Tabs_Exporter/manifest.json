{
  "manifest_version": 3,

  "name": "Tabs Exporter",
  "description": "Экспорт и восстановление открытых вкладок в формате JSON.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "scripting"
  ],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_title": "Tabs Exporter",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "options_page": "options.html",

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
